@model PropertyRentals.Models.Property

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <h1>Details</h1>

    <div>
        <h4>Property</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ZipCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Manager)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Manager.ManagerId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Owner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Owner.OwnerId)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.PropertyCode">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

@*     LIST OF APARTMENT PER PROPERTY  *@
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var apartment in ViewBag.Apartments)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">

                                @if (apartment.Apartment.StatusId == 1)
                                {
                                    <div class="badge bg-warning text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                                        Available
                                    </div>
                                }
                                else if (apartment.Apartment.StatusId == 2)
                                {
                                    <div class="badge bg-success text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                                        Rented
                                    </div>
                       
                                }
                                else if (apartment.Apartment.StatusId == 3)
                                {
                                    <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                                        Unavailable
                                    </div>
                       
                                }

                                <img class="card-img-top" src="@apartment.PhotoLink" alt="..." />
                                <div class="card-body p-2">
                                    <div class="text-center">
                                    <h5 class="fw-bolder">@apartment.Apartment.Title</h5>
                                    <p>@apartment.Apartment.Rent</p>
                       
                                        <div class="row small-text">
                                            <div class="col">
                                                <i class="fa-solid fa-bed"></i>
                                            </div>
                                            <div class="col">
                                            <p>@apartment.Apartment.Bedrooms bedrooms</p>
                                            </div>
                                        </div>
                                        <div class="row small-text">
                                            <div class="col">
                                                <i class="fa-solid fa-bath"></i>
                                            </div>
                                            <div class="col">
                                            <p>@apartment.Apartment.Bathrooms bathrooms</p>
                                            </div>
                                        </div>
                                        <div class="row small-text">
                                            <div class="col">
                                                <i class="fa-solid fa-chart-area"></i>
                                            </div>
                                            <div class="col">
                                            <p>@apartment.Apartment.FloorArea sqm</p>
                                            </div>
                                        </div>
                                        <div class="row small-text">
                                            <div class="col">
                                                <i class="fa-solid fa-square-parking"></i>
                                            </div>
                                            <div class="col">
                                            <p>@apartment.Apartment.ParkingSpots parking spot</p>
                                            </div>
                                        </div>
                                        <div class="row small-text">
                                            <div class="col">
                                                <i class="fa-solid fa-location-dot"></i>
                                            </div>
                                            <div class="col text-start">
                                            <p>@apartment.Address</p>
                                            </div>
                                        </div>
                       
                                    </div>
                       
                                </div>
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a asp-controller="Apartments" asp-action="Details" asp-route-id="@apartment.Apartment.ApartmentId" class="btn btn-outline-dark mt-auto">Details</a></div>
                                </div>
                            </div>
                        </div>


                    }


                </div>
            </div>
        </section>

</div>
