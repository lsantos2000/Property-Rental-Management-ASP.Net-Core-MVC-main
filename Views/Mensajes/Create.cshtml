@model PropertyRentals.Models.Message;
@* //This is the last *@
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h1>Send Message</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Mensajes" asp-action="Create" method="post">



                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input class="form-control" placeholder="Subject" asp-for="Subject" />
                </div>

                <div class="form-group">
                    <label asp-for="Body" class="control-label"></label>
                    @* <textarea class="form-control" placeholder="write your message" asp-for="Body" /> *@
                    <textarea rows="5" class="form-control" placeholder="Write your message" asp-for="Body"></textarea>
                </div>
                
                <input type="number" class="form-control visually-hidden" asp-for="ApartmentId" value="@ViewData["ApartmentId"]" />
                

                <div class="form-group mt-3">
                    <button class="btn btn-primary" type="submit">Send Message</button>
                    @* <a class="btn btn-outline-secondary" asp-area="" asp-controller="Mensajes" asp-action="Login">Return to Login</a> *@
                </div>
                <div class="form-group">
                    @if (ViewData["SignUpMessage"] != null)
                    {

                        <label class="text-danger">@ViewData["SignUpMessage"]</label>
                    }
                </div>


            </form>
        </div>
    </div>
</div>
